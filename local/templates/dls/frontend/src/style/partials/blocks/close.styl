.close
  //display none
  position fixed
  right 0
  bottom 90px
  width 465px

.close__link
  display flex
  justify-content center
  align-items center
  color white
  &:hover
    .close__line
      transform rotate(90deg)


.close__line
  width 20px
  height 1px
  margin-right 15px
  background-color white
  transition .3s