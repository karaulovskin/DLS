.greet
  position fixed
  top 0
  left 0
  transform translateX(0) translateZ(0)
  transition: transform 1s cubic-bezier(0.75, 0, 0.25, 1);
  width 100%
  height 100%
  background-color #9f2013
  will-change transform

.greet-title
  position absolute
  top 50%
  left 25%
  transform translateY(-50%)

.greet-title__text
  font-weight 700
  line-height 0.9
  font-size 192px
  font-size 10vw

.greet-go
  display block
  position absolute
  right 0
  bottom 72px
  width 440px
  height 50px
  padding-top 10px
  transition .5s
  &:hover
    .greet-go__line
      transform scale(1) translateZ(0)

.greet-go__text
  font-weight 600
  font-size 14px
  color white

.greet-title__text
  transform translateX(0) translateZ(0)

.greet-title__text--1
  transition-delay .4s

.greet-title__text--2
  transition-delay .5s

.greet-title__text--3
  transition-delay .7s

.greet-go__track,
.greet-go__line
  position absolute
  left 0
  bottom 0
  width 100%
  height 1px
  background-color white
  opacity .1

.greet-go__line
  opacity 1
  transform-origin 0 0
  transform scale(0) translateZ(0)
  transition transform .3s
  will-change transform
