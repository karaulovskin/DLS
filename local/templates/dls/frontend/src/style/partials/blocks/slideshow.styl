.slideshow-over
  position: fixed
  top 0
  left 0
  width 100%
  height 100%

.slideshow
  width 100%
  height 100%
  transform translateY(0%)
  background bg-slideshow
  transition transform 1s cubic-bezier(.75,0,.25,1)

  &.is-down
    transform translateY(25%)

.slideshow__convas
  height 100%

.slideshow__footer
  height 25vh
  background bg-slideshow-footer
