.slideshow-over
  position: fixed
  top 0
  left 0
  width 100%
  height 100%

.slideshow
  width 100%
  height 100%
  transform translateY(0%)
  background bg-slideshow
  transition transform 1s cubic-bezier(.75,0,.25,1)

  &.is-down
    transform translateY(25%)

.slideshow-convas
  height 100%

.slideshow-footer
  height 25vh
  background bg-slideshow-footer

.slideshow-main
  position: fixed;
  top: 0;
  left: 0;
  width 100%
  height 100%

.slideshow-main__title
  position absolute
  top 50%
  left 25%
  transform translateY(-50%)
  text-transform lowercase
  font-size 7vw
  color white
  
.s-arrow
  position absolute
  top 50%
  transform translateY(-50%)
  width 80px
  height 80px

  &:hover
    .s-arrow__mode
      transform translateX(-8px)

    .s-arrow__mode-circle
      opacity 1

    .s-arrow__mode-arrow
      transform translateX(-17px)

    .s-arrow__mode-arrow-line
      transform scaleX(.55)

.s-arrow--prev
  left 100px

.s-arrow--next
  right 100px
  transform translateY(-50%) rotate(180deg)

.s-arrow__mode
  position absolute
  top 50%
  left 50%
  margin-top: -24px
  margin-left: -24px
  width 47px
  height 47px
  transition .7s cubic-bezier(1,0,.25,1)


.s-arrow__mode-circle
  width 100%
  height 100%
  border 2px solid white
  border-radius 50%
  transition .7s cubic-bezier(1,0,.25,1)
  opacity .25

.s-arrow__mode-arrow
  position relative
  top: -28px;
  height 9px
  left: calc(50% - 4px);
  transition .7s cubic-bezier(1,0,.25,1)

.s-arrow__mode-arrow-line
  position absolute
  top 4px
  width 42px
  height 1px
  background-color white
  transition .7s cubic-bezier(1,0,.25,1)

.s-arrow__mode-arrow-triangle
  position absolute
  top 50%
  left -5px
  transform translateY(-50%)
  border-top: 4px solid transparent
  border-left: 4px solid transparent
  border-right: 4px solid white
  border-bottom: 4px solid transparent

